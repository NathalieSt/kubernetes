{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchFileNames": ["helm-release.yaml", "release.yaml"],
      "dependencyDashboardApproval": true
    },
    {
      "matchFileNames": ["deployment.yaml"],
      "dependencyDashboardApproval": true
    },
    {
      "matchPaths": ["flux-system/"],
      "enabled": false
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)helm-release\\.yaml$", "(^|/)release\\.yaml$"],
      "matchStrings": [
        "chart:\\s*?ref:\\s*?(?<depName>.*?)\\s*?version:\\s*?\"?(?<currentValue>.*?)\"?"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "kubernetes": {
    "fileMatch": ["(^|/)deployment\\.yaml$"]
  },
  "automerge": false,
  "platformAutomerge": false
}