{
  "extends": ["config:base"],
  "helm": {
    "fileMatch": ["\\.yaml$", "\\.yml$"],
    "enabled": true,
    "extractVersion": "^version:\\s*\"?(?<version>[0-9a-zA-Z\\.\\-]+)\"?$"
  },
  "packageRules": [
    {
      "matchManagers": ["helm"],
      "matchDatasources": ["helm"],
      "enabled": true,
      "groupName": "Helm Chart Updates"
    }
  ],
  "postUpdateOptions": ["helm-values"]
}
